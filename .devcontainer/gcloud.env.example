# Google Cloud CLI Environment Configuration for PharmaRx
# Copy this file to gcloud.env and customize with your values

# Your Google Cloud Project ID
export GCLOUD_PROJECT=your-pharmarx-project-id

# Default region and zone for resources
export GCLOUD_REGION=us-central1
export GCLOUD_ZONE=us-central1-a

# Firebase-specific settings
export FIREBASE_PROJECT=$GCLOUD_PROJECT

# Application Default Credentials path (auto-set by gcloud auth application-default login)
# export GOOGLE_APPLICATION_CREDENTIALS=/home/vscode/.config/gcloud/application_default_credentials.json

# Optional: Service account key path (if using service account authentication)
# export GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Optional: Firebase emulator settings (already set in devcontainer.json but can override here)
# export FIREBASE_EMULATOR_HUB=localhost:4400
# export FIRESTORE_EMULATOR_HOST=localhost:8080
# export FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# export FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Terraform variables
export TF_VAR_project_id=$GCLOUD_PROJECT
export TF_VAR_region=$GCLOUD_REGION

# Development flags
export GCLOUD_DISABLE_PROMPTS=true
export CLOUDSDK_CORE_DISABLE_USAGE_REPORTING=true 